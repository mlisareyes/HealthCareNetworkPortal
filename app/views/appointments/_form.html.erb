<%= form_for(@appointment) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, Patient.all.collect { |p| [p.name, p.id] } %>
  <br />
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br />
  <%= f.label :time %>
  <%= f.time_select :time %>
  <br />
  <br />
  <%= f.submit %>
<% end %>
