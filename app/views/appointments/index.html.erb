<h1>All Appointments:</h1>

<% if nested_user %>
  <div>
    <h3>Filter Appointments:</h3>
    <%= form_tag(user_appointments_path(@user), method: "get") do %>
      <%= select_tag "date", options_for_select(["Today", "Future Appointments"]), include_blank: true %>
      <%= submit_tag "Filter" %>
    <% end %>
  <br>
    <br>
  </div>
  <% else %>
<% end %>

<% @appointments.each do |a| %>
  <li><%= link_to a.date.strftime("%B %d, %Y"), appointment_path(a) %>, <%= a.time.strftime("%k:%M") %></li>
<% end %>
