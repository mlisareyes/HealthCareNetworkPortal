<%= form_for(@patient) do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %>
  <br>
    <br>
  <%= f.label "Birthdate:" %>
  <%= f.date_field :birthdate %>
  <br>
    <br>
  <%= f.label "Sex:" %>
  <%= f.select(:sex, [ 'Male', 'Female' ], {}, { :class => 'select' }) %>
  <br>
    <br>
  <%= f.submit %>
<% end %>
