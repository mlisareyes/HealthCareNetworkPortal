<h1><%= @patient.name %></h1>
  <p><b>Birthdate:</b> <%= @patient.birthdate.strftime("%B %d, %Y") %></p>
  <p><b>Sex:</b> <%= @patient.sex %></p>

  <%= link_to 'Edit Patient Information', edit_patient_path(@patient)%> |
  <%= link_to 'Delete Patient', patient_path(@patient), method: :delete, data: { confirm: "Are you sure you want to delete this patient?" } %>

<div>
  <h4>Appointments:</h4>
  <% @patient.appointments.each do |a| %>
    <li><%= link_to a.date.strftime("%B %d, %Y"), appointment_path(a) %>, <%= a.time.strftime("%k:%M") %> w/ Dr. <%= a.user.name %></li>
  <% end %>
  <br>
  <%= link_to "Schedule Appointment", new_patient_appointment_path(@patient) %>
</div>

<div>
  <h4>Notes:</h4>
    <%= link_to 'Add New Note', new_patient_note_path(@patient)%> |
    <%= link_to 'See All Notes', patient_notes_path(@patient)%>
    <ul>
    <% @patient.notes.each do |n| %>
      <li><%= n.content %> noted by Dr. <%= n.user.name %></li>
    <% end %>
    </ul>
</div>
